<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.santiago.project.FragmentConten">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="380dp">

            <LinearLayout
                android:id="@+id/linearLayoutCardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayoutCardContent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/person_photo"
                        android:src="@drawable/moto4"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="17dp" />

                    <TextView
                        android:text="APACHE 180"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_name"
                        android:textSize="22dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_toEndOf="@+id/person_photo"
                        android:layout_marginLeft="17dp"
                        android:layout_marginStart="17dp"
                        android:gravity="center"
                        android:textAlignment="center"/>

                </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutCardContent22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        >

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/person_photo11"
                            android:src="@drawable/moto3"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="17dp" />

                        <TextView
                            android:text="Pulsar 135"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/person_name11"
                            android:textSize="22dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/person_photo11"

                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:gravity="center"
                            android:textAlignment="center"/>

                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayoutCardContent15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        >

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/person_photo12"
                            android:src="@drawable/moto2"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="17dp" />

                        <TextView
                            android:text="Suzuki Gxxer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/person_name12"
                            android:textSize="22dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/person_photo12"

                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:gravity="center"
                            android:textAlignment="center"/>

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </ScrollView>
</FrameLayout>

